<odoo>

	<record id="view_order_form_erpbox_inherit" model="ir.ui.view">
		<field name="name">view.order'form.erpbox.inherit</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
		<field name="arch" type="xml">
			<field name="user_id" position="replace">
				<field name="saleperson_id" widget="many2one_avatar_employee"/>
			</field>
			<field name="sale_order_template_id" position="after">
				<field name="trading_id"/>
			</field>
			<field name="payment_term_id" position="after">
				<field name="division_id" invisible="1"/>
				<field name="region_id" invisible="1"/>
				<field name="area_id" invisible="1"/>
			</field>
		</field>
	</record>

</odoo>