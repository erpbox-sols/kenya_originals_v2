<odoo>


	<record id="view_region_area_tree" model="ir.ui.view">
		<field name="name">view.region.area.tree</field>
		<field name="model">region.areas</field>
		<field name="arch" type="xml">
			<tree string="Divisions, Regions &amp; Areas" editable="bottom">
				<field name="division_id" required="1"/>
				<field name="region_id" required="1"/>
				<field name="area_id" required="1"/>
			</tree>
		</field>
	</record>


	<record id="action_region_areas" model="ir.actions.act_window">
        <field name="name">Divisions, Regions &amp; Areas</field>
        <field name="res_model">region.areas</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Region and Areas
            </p>
        </field>
    </record>

    <menuitem id="region_area_menu" action="action_region_areas" name="Divisions, Regions and Areas" parent="contacts.menu_localisation" sequence="20"/>

</odoo>