<odoo>
    <record id="res_config_settings_view_form_inherit_sale_stock"
        model="ir.ui.view">
        <field name="name">sale settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')]/div/div[@id='sale_config_online_confirmation_pay']"
                position="after">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="add_prepayment_test" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="add_prepayment_test" />
                        <div class="text-muted">
                            Credit Limit
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">Overdue days settings</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="45"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_account_payment']/../../.." position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="no_of_days_overdue_test" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="No. Of Overdue Days Test" for="x_no_of_overdue_days"/>
                        <div class="text-muted">
                            Overdue by <field name="x_no_of_overdue_days" class="oe_inline"/> days.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>